{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_PyScreenShot",
            "type": "shell",
            "command": "./.venv/Scripts/nuitka",
            "windows": {
                "command": ".\\.venv\\Scripts\\nuitka",
            },
            "args": [
                "--msvc=14.3",
                "--follow-imports",
                "--nofollow-import-to=tkinter",
                "--noinclude-unittest-mode=allow",
                "--windows-console-mode=disable",
                "--windows-icon-from-ico=./resource_data/ScreenShot.ico",
                "--file-description='PyScreenShot スクリーンショットアプリケーション'",
                "--file-version=1.0.5.0",
                "--company-name='Nakayoshi Studio'",
                "--product-name='Nakayoshi''s PyScreenShot'",
                "--product-version=1.0.5",
                "--copyright='(C) 2024-, t-nakayoshi (Takayoshi Tagawa). All right reserved.'",
                "--onefile",
                "--onefile-tempdir-spec='{TEMP}/{COMPANY}/PyScreenShot'",
                "--output-dir=dist_nuitka",
                "--output-filename=PyScreenShot.exe",
                "PyScreenShot.py",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_PyScreenShot_resource",
            "type": "shell",
            "command": "./.venv/Scripts/python.exe",
            "windows": {
                "command": ".\\.venv\\Scripts\\python.exe",
            },
            "args": [
                ".\\make_resource_file.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build EXE",
            "type": "shell",
            "command": "echo Compplete 'Build EXE' tasks.",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build_PyScreenShot_resource",
                "build_PyScreenShot",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
    ]
}
